    </div>
</section>

<div class="modal" id="GetMasterList" tabindex="-1" role="dialog">
    @*id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">*@
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div style="text-align-last: right;">
            </div>           
            <div class="modal-header">
                <div class="col-md-6">
                    <h4 class="title" id="largeModalLabel">Customer Details</h4>
                    <button type="button" class="btn btn-secondary btn-danger" data-dismiss="modal" id="btnClosePopup" style="min-height:8px;position: absolute; left: 625px;margin-top: -15px;width:20%">Close</button>
                    <button type="submit" class="btn btn-primary " id="btnPost" style="min-height:8px;position: absolute; left: 735px;margin-top: -15px;width:20%">Save</button>
                    <button type="button" class="btn btn-info" id="btnNewPopup" style="min-height:8px;position: absolute; left: 850px;margin-top: -15px;width:20%">New</button>
                </div>
            </div>
            <div id="PopUpsearch">
            </div> 

            <div class="modal-body modal-scroll-stl" id="modal-bodyPopUp">
                @*style="overflow-y: scroll"*@
                <div class="row clearfix my_gd">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="">Name</label>
                            <input type="text" id="txtname" class="mandatory form-control" maxlength="60" autocomplete="off" /> @*onblur="checkProductNameExists()"*@
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="">Code</label>
                            <input type="text" id="txtcode" class="mandatory form-control" autocomplete="off" />

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="">AltName</label>
                            <input type="text" id="txtaltname" class="  form-control" autocomplete="off"/> 

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="">TRN Number </label>
                            <input class="form-control " type="text" id="sTrnnumber" oninput="this.value = this.value.slice(0,20)" />
                           

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for=""><b>Type</b></label>
                            <input class=" mandatory form-control" type="text" id="sType" placeholder="--Select--" onfocus="DataloadMaster('#sType','/Master/GetAutoComplete','GetCustomerType')" />
                            <input type="hidden" id="sType-id" value="0" /> @*onchange="getFocusCode()"*@

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="">Credit Days</label>
                            <input type="number" id="txtCreditdays" class="form-control" autocomplete="off" min="0" step="1" oninput="truncateInput(this)" />

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="">Credit Amount</label>
                            <input type="number" id="txtCrediamount" class="form-control" min="0" step="0.01" autocomplete="off" value="0" />

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="letter lbl-date-stl">Address</label>
                           
                            <textarea class="form-control" id="txtAddress" autocomplete="off" ></textarea>

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group" id="mapContainer">
                            <label for="">Lat-Lan</label>
                            <input type="text" id="txtLatlan" class="  form-control" autocomplete="off" value=""  />

                        </div>
                        <div id="map" style="display: none;" class="mapSettings"></div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="letter lbl-date-stl">City</label>

                            <input type="text" class="form-control" id="txtCity" autocomplete="off">

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="letter lbl-date-stl">Country</label>

                            <input type="text" class="form-control" id="txtCountry" autocomplete="off">

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="letter lbl-date-stl">PinNumber</label>

                            <input type="text" class="form-control" id="txtPinnumber" oninput="this.value = this.value.replace(/[^0-8]/g, '')" autocomplete="off">

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="letter lbl-date-stl">MobileNumber</label>

                            <input type="text" class="mandatory form-control" id="txtMobile" oninput="this.value = this.value.slice(0, 16)" autocomplete="off">

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="letter lbl-date-stl">PhoneNumber</label>

                            <input type="text" class="form-control" id="txtPhone" oninput="this.value = this.value.slice(0, 16)" autocomplete="off">

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="letter lbl-date-stl">Fax</label>

                            <input type="text" class="form-control" id="sFax" autocomplete="off">

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="letter lbl-date-stl">Email</label>

                            <input type="text" class="mandatory form-control" id="sEmail" name="sEmail" autocomplete="off">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="letter lbl-date-stl">Website</label>

                            <input type="text" class="form-control" id="sWebsite" autocomplete="off">

                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="letter lbl-date-stl">ContactPerson Number</label>

                            <input type="text" class="form-control" id="sContactperson" oninput="this.value = this.value.slice(0, 16)" autocomplete="off">
                        </div>
                    </div>

                    <div class="col-sm-3" hidden>
                        <div class="form-group">

                            <span></span>
                            <br />
                            <label class="form-check-label" for="bGroup">Group</label>

                            <div class="form-check form-check-inline">
                                <input type="hidden" class="form-check-input ml-2" id="bGroup" value="false">
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for=""><b>Parent</b></label>
                            <input class="form-control" type="text" id="sParent" placeholder="--Select--" onfocus="DataloadMaster('#sParent','/Master/GetAutoComplete','GetParentCustomer')" />
                            <input type="hidden" id="sParent-id" value="0" /> 

                        </div>
                    </div>


                </div>
                

            </div> @*modal-body*@
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
